<!-- Combat Knife -->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
	<defName>VWE_MeleeWeapon_CombatKnife</defName>
	<label>combat knife</label>
	<description>One of mankind's oldest manufactured objects. The knife has taken many forms, but the concept has always remained the same: A handle for holding and a sharp edge for cutting.\n\nCombat knife is a standard issue melee weapon for most of the military forces.</description> <!-- Vanilla Original Text plus nn -->
	<graphicData>
		<texPath>Things/WeaponMelee/CombatKnife</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>MedievalMeleeAdvanced</li>
    </weaponTags>
    <costStuffCount>50</costStuffCount>
	<statBases>
		<WorkToMake>6400</WorkToMake>
		<Mass>0.5</Mass>
	</statBases>
	<equippedAngleOffset>-65</equippedAngleOffset>
	<stuffCategories>
		<li>Metallic</li>
	</stuffCategories>
    <tools> <!-- adjust while balancing # Document 14 -->
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>14</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>14</power>
		<armorPenetration>0.15</armorPenetration>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
	<recipeMaker>
	  <recipeUsers>
		<li>FueledSmithy</li>
		<li>ElectricSmithy</li>
	  </recipeUsers>
      <researchPrerequisite>VWE_TrenchWarfare</researchPrerequisite>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>


</Defs>
