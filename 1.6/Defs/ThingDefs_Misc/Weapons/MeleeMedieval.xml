      <texPath>Things/WeaponMelee/Halberd</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2.0</drawSize>
    </graphicData>
    <costStuffCount>100</costStuffCount>
    <statBases>
      <WorkToMake>13000</WorkToMake>
      <Mass>7.5</Mass>
      <VEF_MeleeWeaponRange>2</VEF_MeleeWeaponRange>
    </statBases>
    <equippedAngleOffset>
