        </capacities>
        <power>9</power>
        <armorPenetration>0.13</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>18</power>
        <armorPenetration>0.24</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <weaponTags>
