<Defs>

  <!-- Shovel -->
  <ThingDef ParentName="BaseMeleeWeapon_Blunt_Quality">
    <defName>VWE_MeleeWeapon_Shovel</defName>
    <label>shovel</label>
    <description>One of the most versatile tools for a soldier, the entrenching tool is a simple but effective weapon. With a sturdy handle and a sharpened, heavy blade, it serves equally well for digging a trench or bludgeoning an enemy.</description>
    <graphicData>
      <texPath>Things/WeaponMelee/Shovel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <costStuffCount>65</costStuffCount>
    <statBases>
      <WorkToMake>9500</WorkToMake>
      <Mass>2</Mass>
    </statBases>
    <equippedStatOffsets>
      <!-- Todo: scale with quality -->
