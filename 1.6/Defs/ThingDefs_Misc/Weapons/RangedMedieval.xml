<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Crossbow -->
  <ThingDef ParentName="BaseWeaponNeolithic" Name="VWE_Crossbow_Base">
    <defName>VWE_Bow_Crossbow</defName>
    <label>crossbow</label>
    <description>A simple crossbow. It fires a standard bolt with decent accuracy and firing rate, making it a reliable mid-tier anti-armor ranged weapon.</description>
    <graphicData>
      <texPath>NewThings/Crossbow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Large</soundInteract>
    <costList>
      <WoodLog>50</WoodLog>
      <Steel>15</Steel>
    </costList>
    <techLevel>Medieval</techLevel>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.7</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.55</AccuracyLong>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRangedHeavy</li>
      <li>NeolithicRangedDecent</li>
    </weaponTags>
    <weaponClasses Inherit="False">
      <!-- Don't inherit the "Neolithic" tag. -->
      <li>Ranged</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <researchPrerequisite>Greatbow</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VWE_Arrow_Bolt</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>29.9</range>
        <soundCast>VWE_Shot_Crossbow</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <armorPenetration>0.13</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>poke</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <armorPenetration>0.13</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>VWE_Arrow_Bolt</defName>
    <label>crossbow bolt</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Bolt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>ArrowHighVelocity</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <armorPenetrationBase>0.25</armorPenetrationBase>
      <speed>65</speed>
    </projectile>
  </ThingDef>

  <!-- Throwing Knives -->
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>VWE_Throwing_Knives</defName>
    <label>throwing knives</label>
    <description>A small bundle of light, balanced knives designed to be thrown rapidly. Ineffective against armor, but capable of high close-range damage.</description>
    <graphicData>
      <texPath>NewThings/ThrowingKnives</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Silver_Drop</soundInteract>
    <techLevel>Neolithic</techLevel>
    <!--		<smeltable>true</smeltable>-->
    <!--		<burnableByRecipe>true</burnableByRecipe>-->
    <costStuffCount>20</costStuffCount>
    <statBases>
      <WorkToMake>1500</WorkToMake>
      <Mass>0.8</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.4</AccuracyMedium>
      <AccuracyLong>0.1</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <weaponTags>
      <li>NeolithicRangedBasic</li>
      <li>NoRelic</li>
    </weaponTags>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedLight</li>
      <li>ShortShots</li>
    </weaponClasses>
    <recipeMaker>
      <recipeUsers>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <researchPrerequisite>Smithing</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VWE_FlyingBlade</defaultProjectile>
        <warmupTime>0.75</warmupTime>
        <range>14.9</range>
        <ticksBetweenBurstShots>15</ticksBetweenBurstShots>
        <burstShotCount>2</burstShotCount>
        <soundCast>ThrowGrenade</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <armorPenetration>0.05</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>8</power>
        <armorPenetration>0.1</armorPenetration>
        <cooldownTime>1.25</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>VWE_FlyingBlade</defName>
    <label>small knife</label>
    <graphicData>
      <texPath>Things/Projectile/KnifeThrown</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
<!--      <damageDef>VWE_RangedCut</damageDef>-->
      <damageDef>RangedStab</damageDef>
      <damageAmountBase>6</damageAmountBase>
      <stoppingPower>0.5</stoppingPower>
      <armorPenetrationBase>0.1</armorPenetrationBase>
      <arcHeightFactor>1.5</arcHeightFactor>
      <speed>35</speed>
    </projectile>
  </ThingDef>

  <!-- Longbow -->
  <ThingDef ParentName="BaseWeaponNeolithic" Name="VWE_Bow_Long_Base">
    <defName>VWE_Bow_Long</defName>
    <label>longbow</label>
    <description>A tall, powerful bow requiring great strength to draw. It launches high velocity arrows at extreme range.</description>
    <graphicData>
      <texPath>NewThings/Longbow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.12</drawSize>
    </graphicData>
    <soundInteract>Bow_Large</soundInteract>
    <techLevel>Medieval</techLevel>
    <costList>
      <WoodLog>70</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.4</AccuracyTouch>
      <AccuracyShort>0.6</AccuracyShort>
      <AccuracyMedium>0.8</AccuracyMedium>
      <AccuracyLong>0.9</AccuracyLong>
      <RangedWeapon_Cooldown>1.75</RangedWeapon_Cooldown>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <weaponTags>
      <li>NeolithicRangedDecent</li>
      <li>NeolithicRangedChief</li>
    </weaponTags>
    <weaponClasses Inherit="False">
      <!-- Don't inherit the "Neolithic" tag. -->
      <li>Ranged</li>
      <li>RangedHeavy</li>
      <li>LongShots</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisite>Greatbow</researchPrerequisite>
      <recipeUsers>
        <li>CraftingSpot</li>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VWE_Arrow_Long</defaultProjectile>
        <warmupTime>2.5</warmupTime>
        <range>36.9</range>
        <soundCast>Bow_Large</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <armorPenetration>0.13</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>VWE_Arrow_Long</defName>
    <label>longbow arrow</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Large</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Arrow</damageDef>
      <damageAmountBase>16</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <armorPenetrationBase>0.1</armorPenetrationBase>
      <arcHeightFactor>0.70</arcHeightFactor>
      <shadowSize>0.4</shadowSize>
      <speed>60</speed>
    </projectile>
  </ThingDef>

</Defs>
