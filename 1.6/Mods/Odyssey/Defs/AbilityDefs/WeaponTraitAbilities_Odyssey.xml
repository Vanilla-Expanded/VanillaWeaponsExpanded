<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<AbilityDef MayRequire="Ludeon.RimWorld.Anomaly">
		<defName>VWE_LaunchFlare</defName>
		<label>fire disruptor flare</label>
		<description>Fire a disruptor flare over a medium distance. Can be reloaded using bioferrite.</description>
		<iconPath>UI/Gizmos/LaunchFlarestrike</iconPath>
		<aiCanUse>true</aiCanUse>
		<verbProperties>
			<verbClass>Verb_CastAbility</verbClass>
			<range>33.9</range>
			<warmupTime>1</warmupTime>
			<soundCast>FlareLaunch</soundCast>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
			<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
		</verbProperties>
		<comps>
			<li Class="CompProperties_AbilityLaunchProjectile">
				<projectileDef>Grenade_DisruptorFlare</projectileDef>
			</li>
		</comps>
	</AbilityDef>
	
	<AbilityDef>
		<defName>VWE_UnderbarrelShotgun</defName>
